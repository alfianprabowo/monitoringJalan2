<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout1"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/statusView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/status_no" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvLat_rusak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lat"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tvLng_rusak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Longitude"
                    android:textColor="@color/black"
                    android:layout_marginLeft="7dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvPointKM_rusak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KM"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvPointM_rusak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="M"
                    android:layout_marginLeft="7dp"
                    android:textColor="@color/black" />

            </LinearLayout>


            <TextView
                android:id="@+id/tvVolume_rusak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="volume"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvBagianJalan_rusak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bagianjalan"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvKerusakan_rusak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="rusak"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvDateSurveyed_rusak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal survey"
                android:textColor="@color/black" />

            <!--<TextView
                android:id="@+id/tvFixed_rusak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="status"
                android:textColor="@android:color/holo_red_light" />-->
        </LinearLayout>


</LinearLayout>




</LinearLayout>