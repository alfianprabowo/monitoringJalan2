<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvEdit_pemanfaatan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Edit Pemanfaatan"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
        android:id="@+id/tvRuang_jalan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ruang Jalan :"
        android:layout_below="@+id/tvEdit_pemanfaatan"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <Spinner
        android:id="@+id/spinnerUpdateRuangJalan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvRuang_jalan"/>

    <TextView
        android:id="@+id/tvPemanfaatan_jalan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pemanfaatan Jalan :"
        android:layout_below="@+id/spinnerUpdateRuangJalan"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <Spinner
        android:id="@+id/spinnerUpdatePemanfaatan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPemanfaatan_jalan"/>

    <LinearLayout
        android:id="@+id/layKM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_below="@id/spinnerUpdatePemanfaatan">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvUpdateKm_pemanfaatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvLng_pemanfaatan"
                android:gravity="center_vertical"
                android:text="KM"
                android:textAppearance="?android:attr/textAppearanceMedium" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layLat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_below="@+id/layKM">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvUpdateLat_pemanfaatan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Lat"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tvUpdateSurveyed_pemanfaatan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="Date"
        android:layout_below="@+id/layLat"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"/>



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/tvUpdateSurveyed_pemanfaatan"
        android:layout_centerHorizontal="true"
        android:gravity="bottom"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btn_update_pemanfaatan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_light"
            android:layout_alignParentEnd="true"
            android:text="Edit" />

        <Button
            android:id="@+id/btn_batal_pemanfaatan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Batal"
            android:layout_alignParentStart="true"
            android:background="@android:color/holo_red_light"/>

    </RelativeLayout>


</RelativeLayout>